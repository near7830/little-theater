<div class="side-bar-header">
  <div class="header-name">
    <%= link_to current_user.nickname,  edit_user_path(current_user) %>
  </div>
  <div class="create-room">
    <%= link_to "公演チャットを作成する", new_mainroom_path %> 
  </div>
</div>

<div class="rooms">
  <% current_user.mainrooms.each do |mainroom| %>
    <div class="room">
      <div class="room-name">
       <%= link_to mainroom.name, mainroom_messages_path(mainroom) %>
      </div>
    </div>
  <% end %>
</div>